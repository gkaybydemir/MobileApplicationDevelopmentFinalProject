<!-- list_item_camping_place.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="#DDBAAB"
    android:backgroundTint="#DDBAAB">

    <ImageView
        android:id="@+id/campingPlaceImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/campingPlaceNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camping Place Name"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/campingPlacePriceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price: $50/night"
            android:textColor="#55514B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/campingPlaceLocationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: Somewhere"
            android:textColor="#55514B"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>