<!-- list_item_camping_place.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/campingPlaceImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/campingPlaceNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camping Place Name"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/campingPlacePriceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price: $50/night"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/campingPlaceLocationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: Somewhere"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>
</LinearLayout>