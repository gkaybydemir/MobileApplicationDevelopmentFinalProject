<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
    <!-- ImageView for Camping Place Photo -->
        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <ImageView android:id="@+id/campingPlaceImageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

            <!-- Camping Place Name -->
            <TextView
                android:id="@+id/campingPlaceNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                android:textStyle="bold" />

            <!-- Price Information -->
            <TextView
                android:id="@+id/campingPlacePriceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"/>

            <!-- Location Information -->
            <TextView
                android:id="@+id/campingPlaceLocationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"/>

            <!-- Description Text -->
            <TextView
                android:id="@+id/campingPlaceDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16dp"/>

            <!-- Checkbox Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Left Side Checkboxes -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Checkbox 1 -->
                    <CheckBox
                        android:id="@+id/campingPlaceToiletCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Toilet"
                        android:textSize="16sp"/>

                    <!-- Checkbox 2 -->
                    <CheckBox
                        android:id="@+id/campingPlaceWifiCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wi-fi"
                        android:textSize="16sp"/>

                    <!-- Checkbox 3 -->
                    <CheckBox
                        android:id="@+id/campingPlaceShowerCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shower"
                        android:textSize="16sp"/>

                    <!-- Checkbox 4 -->
                    <CheckBox
                        android:id="@+id/campingPlaceWaterCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Water"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- Right Side Checkboxes -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Checkbox 5 -->
                    <CheckBox
                        android:id="@+id/campingPlaceMarketCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Market"
                        android:textSize="16sp"/>

                    <!-- Checkbox 6 -->
                    <CheckBox
                        android:id="@+id/campingPlaceParkingAreaCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Parking Area "
                        android:textSize="16sp"/>

                    <!-- Checkbox 7 -->
                    <CheckBox
                        android:id="@+id/campingPlaceBeachCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Beach"
                        android:textSize="16sp"/>

                    <!-- Checkbox 8 -->
                    <CheckBox
                        android:id="@+id/campingPlaceElectricityCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Electricity"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- TextView and ImageView in Horizontal Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <!-- Bold Text -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:text="Bold Text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- ImageView -->
                <ImageView
                    android:id="@+id/campingPlaceMapLinkImageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="right"
                    android:layout_marginStart="8dp"
                    android:gravity="end|center_vertical"
                    android:src="@mipmap/ic_location" />
            </LinearLayout>

            <!-- Reservation Button -->
            <Button
                android:id="@+id/reservation_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reservation"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
